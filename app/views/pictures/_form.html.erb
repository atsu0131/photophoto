<%= form_with(model: @picture, local: true ,url: choose_new_or_edit) do |form| %>
<% if @picture.errors.any? %>
  <div id="error_explanation">
    <h2><%= @picture.errors.count %>件のエラーがあります。</h2>

    <lu>
      <% @picture.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </lu>
  </div>
<% end %>
<table>
  <tr>
    <td><%= form.label :title %></td>
    <td><%= form.text_field :title %></td>
  </tr>

  <tr>
    <td><%= form.label :content %></td>
    <td><%= form.text_field :content %></td>
  </tr>

  <tr>
    <td><%= form.label :image %></td>
    <td><%= image_tag(@picture.image.url) if @picture.image.url %></td>
  </tr>
</table>
<table>
  <tr>
    <td><%= form.file_field :image %></td>
  </tr>
    <br>
    <td><%= form.submit(["投稿する"])%></td>
</table>
        <% end %>

<%= link_to '戻る',pictures_path %>
